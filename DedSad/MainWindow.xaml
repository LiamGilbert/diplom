 <Window x:Class="DedSad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DedSad"
        mc:Ignorable="d"
        Title="Zorenka+" Background="AliceBlue" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*">
            </RowDefinition>

            <RowDefinition>
            </RowDefinition>
        </Grid.RowDefinitions>
        <Frame Name="FrmMain" Grid.Row="1" NavigationUIVisibility="Hidden"/>
        <StackPanel Background="Aquamarine" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Stretch" Orientation="Horizontal"/>
        <TextBlock FontSize="28px" HorizontalAlignment="Center" Text="{Binding ElementName=FrmMain, Path=Content.Title}"/>
    </Grid>
</Window>
